<!-- views/ranking.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pokémon Monster - <%= title %></title>
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/ranking.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="icon" href="assets/svg/pokeball.svg" type="image/svg+xml">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>

<body>

    <%- include('partials/header') %>

    <main class="main-content">
        <section class="ranking-section card-like-section animate-on-scroll">
            <div class="container">
                <h2 class="section-title typewriter" data-text="<%= title %>"><%= title %></h2>

                <div class="ranking-controls">
                    <div class="ranking-type-selection">
                        <button class="btn btn-secondary <%= rankingType === 'level' ? 'active' : '' %>" data-ranking-type="level">
                            <i class="fas fa-chart-line"></i> Ranking de Nível
                        </button>
                        <button class="btn btn-secondary <%= rankingType === 'resets' ? 'active' : '' %>" data-ranking-type="resets">
                            <i class="fas fa-sync-alt"></i> Ranking de Resets
                        </button>
                    </div>

                    <div class="search-bar">
                        <input type="text" id="rankingSearchInput" placeholder="Buscar jogador..." value="<%= search %>">
                        <button id="rankingSearchBtn" class="btn btn-primary"><i class="fas fa-search"></i></button>
                    </div>
                </div>

                <% if (players.length > 0) { %>
                    <div class="ranking-table-container scrollable-container">
                        <table class="ranking-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Nome do Jogador</th>
                                    <th>Level</th>
                                    <% if (rankingType === 'resets') { %>
                                        <th>Resets</th>
                                    <% } %>
                                    <th>Experiência</th>
                                    <th>Vocação</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% players.forEach((player, index) => { %>
                                    <tr>
                                        <td><%= (currentPage - 1) * pageSize + index + 1 %></td>
                                        <td><a href="/character/<%= player.name %>"><%= player.name %></a></td>
                                        <td><%= player.level %></td>
                                        <% if (rankingType === 'resets') { %>
                                            <td><%= player.resets %></td>
                                        <% } %>
                                        <td><%= player.experience.toLocaleString() %></td>
                                        <td><%= player.vocation %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>

                    <div class="pagination-controls">
                        <button class="btn btn-secondary" id="prevPageBtn" <%= currentPage === 1 ? 'disabled' : '' %>>Anterior</button>
                        <span class="pagination-info">Página <%= currentPage %> de <%= totalPages %> (<%= totalPlayers %> jogadores)</span>
                        <button class="btn btn-secondary" id="nextPageBtn" <%= currentPage === totalPages ? 'disabled' : '' %>>Próxima</button>
                    </div>
                <% } else { %>
                    <p class="no-results">Nenhum jogador encontrado para o ranking selecionado ou termo de busca.</p>
                <% } %>
            </div>
        </section>
    </main>

    <%- include('partials/footer') %>

    <script src="js/script.js"></script>
    <script src="js/ranking.js"></script>
</body>

</html>